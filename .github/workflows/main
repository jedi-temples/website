name: 2-minute-cron
on:
  schedule:
    - cron: "*/2 * * * *"
jobs:
  cron:
    runs-on: ubuntu-latest
    steps:
      - name: Call our API route
        run: |
          curl --request POST \
              --url 'https://supershiba-api.vercel.app/api/hello' \
              --header 'Authorization: Bearer XX'
